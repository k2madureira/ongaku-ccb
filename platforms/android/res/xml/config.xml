<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="webhostapp.OngakuCCB" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="SpeechRecognition">
        <param name="android-package" value="com.pbakondy.SpeechRecognition" />
    </feature>
    <name>Ongaku CCB</name>
    <description>
      Aplicativo para criação de relatórios de ensaios.
    </description>
    <author email="lenilsonmadureira@gmail.com" href="">
        Lenilson Madureira
    </author>
    <access origin="" />
    <icon density="ldpi" src="res/icon/android/icon-l.png" />
    <icon density="mdpi" src="res/icon/android/icon-m.png" />
    <icon density="hdpi" src="res/icon/android/icon-h.png" />
    <icon density="xhdpi" src="res/icon/android/icon-x.png" />
    <icon density="xxhdpi" src="res/icon/android/icon-2x.png" />
    <icon density="xxxhdpi" src="res/icon/android/icon-3x.png" />
    <splash density="hdpi" heigth="480" src="res/screen/android/screen-hdpi-landscape.png" width="800" />
    <splash density="ldpi" heigth="200" src="res/screen/android/screen-ldpi-landscape.png" width="320" />
    <splash density="mdpi" heigth="320" src="res/screen/android/screen-mdpi-landscape.png" width="480" />
    <splash density="xhdpi" heigth="720" src="res/screen/android/screen-xhdpi-landscape.png" width="1280" />
    <splash density="hdpi" heigth="800" src="res/screen/android/screen-hdpi-portrait.png" width="480" />
    <splash density="ldpi" heigth="320" src="res/screen/android/screen-ldpi-portrait.png" width="200" />
    <splash density="mdpi" heigth="480" src="res/screen/android/screen-mdpi-portrait.png" width="320" />
    <splash density="xhdpi" heigth="1280" src="res/screen/android/screen-xhdpi-portrait.png" width="720" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0x081B27FF" />
    <preference name="StatusBarBackgroundColor" value="#041119" />
</widget>
